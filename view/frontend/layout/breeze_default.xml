<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="Bss_QuantityDropdown/js/dropdown" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeBssQuantityDropdown/js/dropdown</item>

                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">quantitydropdown/general/enable</param>
                                </item>
                            </item>

                            <item name="Bss_QuantityDropdown/js/cart-dropdown" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeBssQuantityDropdown/js/cart-dropdown</item>

                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">quantitydropdown/general/enable</param>
                                </item>
                            </item>

                            <item name="Bss_QuantityDropdown/js/configurable" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeBssQuantityDropdown/js/configurable</item>

                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">quantitydropdown/general/enable</param>
                                </item>
                            </item>

                            <item name="Bss_QuantityDropdown/js/swatch-renderer" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeBssQuantityDropdown/js/swatch-renderer</item>

                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">quantitydropdown/general/enable</param>
                                </item>
                            </item>

                            <item name="Bss_QuantityDropdown/js/price-box" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeBssQuantityDropdown/js/price-box</item>

                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">quantitydropdown/general/enable</param>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
